	<script type="text/javascript">
    	$(document).ready(function(){
            //날짜에서 시간과분만 추출
            function getDateFromJSON(str) {
                var date = new Date(str);
                return (date.getHours() + 9) + ':' + date.getMinutes();
            }

            var get_data = <%- JSON.stringify(devices) %>;  //data 정보
            var ec_data = new Array();  //ec data를 담을 배열
            var temp_data = new Array();    //온도 정보 담을 배열
            var moist_data = new Array();   //토양수분 정보 담을 배열
            var date_label = new Array();
            
            
            //한행에 온도,ec,토양수분 정보를 가지고 있기에 한행씩 불러서 나누는 작업

            //한 행씩 불러온다.
            for ( var i in get_data){   
                //콤마로 data 구분되어 있어서 콤마로 data 분리하여 배열로 담는다.
                var array1 = get_data[i].sd_data.split(','); 
                date_label[i] = getDateFromJSON(get_data[i].createdAt);
               
                //배열로 분리된 data를 ec,온도,토양수분 으로 구분하여 나누어 담는다.
                for (var j in array1) {
                    //데이터는 8개씩 3부분으로 들어온다.
                    if(i == 0 && j < 8){
                        ec_data[j] = new Array();
                        temp_data[j] = new Array();
                        moist_data[j] = new Array();
                    }
                                
                    if( j < 8 ){
                        ec_data[j][i] = !isNaN(array1[j]) ? array1[j]:"000.0";                                    
                    } else if( j < 16 ) {
                        temp_data[j-8][i] = !isNaN(array1[j]) ? array1[j]:"000.0";
                    } else if( j < 24 ) {
                        moist_data[j-16][i] = !isNaN(array1[j]) ? array1[j]:"000.0";
                    }
                }
            }
            
        	var dataEC = {
			  labels: date_label,
			  series: ec_data
            };
            
            var dataTemp = {
                labels: date_label,
                series: temp_data
            };
            
            var dataMoist = {
                labels: date_label,
                series: moist_data
			};

			var optionsSales = {
			  lineSmooth: false,
			  low: 0,
			  high: 23,
			  showArea: true,
			  height: "245px",
			  axisX: {
				showGrid: false,
			  },
			  lineSmooth: Chartist.Interpolation.simple({
				divisor: 8
			  }),
			  showLine: false,
			  showPoint: false,
			};

			var responsiveSales = [
			  ['screen and (max-width: 640px)', {
				axisX: {
				  labelInterpolationFnc: function (value) {
					return value[0];
				  }
				}
			  }]
            ];
            
			Chartist.Bar('#chartEC', dataEC, optionsSales, responsiveSales);
			
			Chartist.Bar('#chartTemp', dataTemp, optionsSales, responsiveSales);			

			Chartist.Bar('#chartMoist', dataMoist, optionsSales, responsiveSales);

			/*
        	$.notify({
            	icon: 'pe-7s-gift',
            	message: "Welcome to <b>Light Bootstrap Dashboard</b> - a beautiful freebie for every web developer."

            },{
                type: 'info',
                timer: 4000
            });
			*/

    	});
	</script>

